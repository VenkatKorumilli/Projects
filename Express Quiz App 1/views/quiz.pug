doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Edupoly
    // Bootstrap 5.3 CSS CDN
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    // Bootstrap Icons CSS from CDN
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css")
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        img(src="https://edupolyoldsite.vercel.app/common/assets/edupoly-logo-dark.png",width="180px")
        button.navbar-toggler(
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        )
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.fs-4(aria-current="page", href="/home") Home
            li.nav-item
              a.nav-link.fs-4.active.me-2(href="/") Quiz
        
          //- h3.text-warning Hi #{user.username},
          //- img.rounded-circle.m-2(src=`${user['profile_pic']}`,width="50px")
          a(href="/login").btn.btn-danger  Logout
  
    h1.mb-4.ms-2.mt-2.text-secondary Quiz on #{techs}
    form(action="/evaluate" method="POST") 
      ol
        each question in ques
          li
            h4 #{question.question}
            each option in question.options
                div
                    input(type="radio" name=`${question.id}` value=`${option}`)
                    label(for="") #{option}
                    
        button.btn.btn-primary.mt-4(type="submit") Submit
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
