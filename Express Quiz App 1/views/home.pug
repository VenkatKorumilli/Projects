doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Edupoly
    // Bootstrap 5.3 CSS CDN
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        img(src="https://edupolyoldsite.vercel.app/common/assets/edupoly-logo-dark.png",width="180px")
        button.navbar-toggler(
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        )
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.fs-4.active(aria-current="page", href="/home") Home
            li.nav-item
              a.nav-link.fs-4.me-2(href="/") Quiz
        
          h3.text-warning Hi #{user.username},
          img.rounded-circle.m-2(src=`${user['profile_pic']}`,width="50px")
          a(href="/login").btn.btn-danger.fw-bold.btn-lg  Logout
            
            // Main content section
    main.container.mt-4
      h1.text-center.mb-4 Welcome to Edupoly
      h2 Please Select the Technology
        .d-flex.flex-wrap.justify-content-between.mt-5
          each t in technology
            div.card.w-25.m-2.p-5 
              a.text-decoration-none.text-center(href=`/getQuestionsByCategory/${t}`) #{t}
    // Footer
    footer.bg-secondary.text-white.text-center.fixed-bottom
        | &copy; 2025 Edupoly.

    // Bootstrap 5.3 JS CDN for interactive behaviors
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

