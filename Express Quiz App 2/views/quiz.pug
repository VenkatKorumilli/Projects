doctype html
html
  head
    title Quiz Application
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    // Bootstrap 5 CDN
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  body
    // Navbar Start
    nav.navbar.d-flex.navbar-expand-lg.navbar-dark.bg-primary.justify-content-between.p-2
        img.img-fluid(src="https://edupolyoldsite.vercel.app/common/assets/edupoly-logo-dark.png",width="150px")
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNavAltMarkup", aria-controls="navbarNavAltMarkup", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNavAltMarkup
        div  
          .navbar-nav.gap-1
            a.nav-link.fs-5(aria-current="page", href="") Home
            a.nav-link.fs-5.active(href="") Quiz
       
        //- h4.text-white.mb-0 Hi, #{user.username.toUpperCase()}
        a(href="/logout").btn.btn-danger.ms-2 Logout
    // Navbar End
    .container.py-5
      h1.mb-4.text-center Quiz Application
      form(action="/evaluate" method="POST")
        ol
            each question in questions
                li.fs-4.fw-bold #{question.question}
                each option in question.options
                    div
                    input(type="radio" name=`${question.id}` value=`${option}`)
                    label(for="") #{option}     
        button.btn.btn-success.fs-5(type="submit") Submit
    // Bootstrap JS (optional, for some interactive components)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
